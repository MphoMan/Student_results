<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="MainActivity">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="200dp"
        android:layout_height="33dp"
        android:gravity="center"
        android:text="68136838"
        android:inputType="none"
        android:editable="false"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.563"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/etnumber1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Assignment 1"
        android:inputType="number"
        android:minHeight="48dp"
        app:layout_constraintBottom_toTopOf="@+id/etnumber2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.014"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.108"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/etnumber3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Assignment 3"
        android:inputType="number"
        android:minHeight="48dp"
        app:layout_constraintBottom_toTopOf="@+id/etnumber4"
        app:layout_constraintTop_toBottomOf="@+id/etnumber2"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="34dp" />

    <TextView
        android:id="@+id/txterrors"
        android:layout_width="214dp"
        android:layout_height="45dp"
        android:hint="Errors:"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btncalculate"
        app:layout_constraintTop_toBottomOf="@+id/etnumber4"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="34dp" />

    <TextView
        android:id="@+id/txtpercentage"
        android:layout_width="115dp"
        android:layout_height="31dp"
        android:text="Results:"
        android:inputType="none"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/txtsymbol"
        app:layout_constraintTop_toBottomOf="@+id/btncalculate"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="34dp" />

    <EditText
        android:id="@+id/etnumber4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Exam Mark"
        android:inputType="number"
        android:minHeight="48dp"
        app:layout_constraintBottom_toTopOf="@+id/txterrors"
        app:layout_constraintTop_toBottomOf="@+id/etnumber3"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="34dp" />

    <Button
        android:id="@+id/btncalculate"
        android:layout_width="202dp"
        android:layout_height="48dp"
        android:text="Calculate"
        app:layout_constraintBottom_toTopOf="@+id/txtpercentage"
        app:layout_constraintTop_toBottomOf="@+id/txterrors"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="35dp" />

    <TextView
        android:id="@+id/txtsymbol"
        android:layout_width="87dp"
        android:layout_height="28dp"
        android:text=""
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtpercentage"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="161dp" />

    <EditText
        android:id="@+id/etnumber2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Assignment 2"
        android:inputType="number"
        android:minHeight="48dp"
        app:layout_constraintBottom_toTopOf="@+id/etnumber3"
        app:layout_constraintTop_toBottomOf="@+id/etnumber1"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="34dp" />


</androidx.constraintlayout.widget.ConstraintLayout>